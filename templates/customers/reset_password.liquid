<section class="section">
  <div class="container">
    <div class="badge muted">Account</div>
    <h1 class="section-title" style="font-size: 2.25rem; margin: 1rem 0;">Reset password</h1>
    <div class="card" style="border-radius: 1rem; padding: 1.5rem; max-width: 520px;">
      {% form 'reset_customer_password' %}
        {{ form.errors | default_errors }}
        <label class="muted" style="text-transform: uppercase; letter-spacing: 0.2em; font-size: 0.7rem;">
          New password
          <input class="input" type="password" name="customer[password]" required style="margin-top: 0.5rem;">
        </label>
        <label class="muted" style="text-transform: uppercase; letter-spacing: 0.2em; font-size: 0.7rem; margin-top: 1rem; display: block;">
          Confirm password
          <input class="input" type="password" name="customer[password_confirmation]" required style="margin-top: 0.5rem;">
        </label>
        <button type="submit" class="solid-button" style="margin-top: 1.5rem; padding: 0.75rem 1.5rem; border-radius: 999px;">
          Reset password
        </button>
      {% endform %}
    </div>
  </div>
</section>
