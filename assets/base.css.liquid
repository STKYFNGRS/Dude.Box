:root {
  --color-background: {{ settings.color_background | default: '#0f1628' }};
  --color-foreground: {{ settings.color_foreground | default: '#ffffff' }};
  --color-muted: {{ settings.color_muted | default: '#b2bccb' }};
  --color-accent: {{ settings.color_accent | default: '#c79d7a' }};
  --color-accent-secondary: {{ settings.color_accent_secondary | default: '#4b5320' }};
  --color-border: {{ settings.color_border | default: '#23314b' }};
  --color-panel: {{ settings.color_panel | default: '#141d33' }};
}

*,
*::before,
*::after {
  box-sizing: border-box;
}

body.theme-body {
  margin: 0;
  min-height: 100vh;
  background: var(--color-background);
  color: var(--color-foreground);
  font-family: "Inter", system-ui, -apple-system, sans-serif;
  letter-spacing: 0.008em;
  line-height: 1.6;
}

a {
  color: inherit;
  text-decoration: none;
}

.main-content {
  display: block;
}

.container {
  width: 100%;
  max-width: 1152px;
  margin: 0 auto;
  padding: 0 1.5rem;
}

.section-title {
  font-family: "Fraunces", Georgia, serif;
  letter-spacing: 0.03em;
  font-weight: 800;
}

.muted {
  color: var(--color-muted);
}

.card {
  border: 1px solid var(--color-border);
  background: var(--color-panel);
}

.outline-button {
  border: 1px solid var(--color-border);
  background: transparent;
  color: var(--color-foreground);
  text-transform: uppercase;
  letter-spacing: 0.25em;
  font-size: 0.75rem;
}

.solid-button {
  background: var(--color-accent);
  color: #0f1628;
  text-transform: uppercase;
  letter-spacing: 0.25em;
  font-size: 0.75rem;
}

.accent-button {
  background: var(--color-accent-secondary);
  color: var(--color-foreground);
  text-transform: uppercase;
  letter-spacing: 0.25em;
  font-size: 0.75rem;
}

.section {
  padding: 3.5rem 0;
}

.section-border {
  border-bottom: 1px solid var(--color-border);
}

.button-row {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
}

.hero-grid {
  display: grid;
  gap: 3rem;
}

@media (min-width: 900px) {
  .hero-grid {
    grid-template-columns: 1.1fr 0.9fr;
    align-items: center;
  }
}

.grid-3 {
  display: grid;
  gap: 1.5rem;
}

@media (min-width: 768px) {
  .grid-3 {
    grid-template-columns: repeat(3, minmax(0, 1fr));
  }
}

.grid-2 {
  display: grid;
  gap: 1.5rem;
}

@media (min-width: 768px) {
  .grid-2 {
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }
}

.badge {
  font-size: 0.65rem;
  text-transform: uppercase;
  letter-spacing: 0.35em;
}

.nav {
  display: flex;
  flex-wrap: wrap;
  gap: 1.5rem;
  text-transform: uppercase;
  letter-spacing: 0.2em;
  font-size: 0.875rem;
  align-items: center;
}

.header {
  position: sticky;
  top: 0;
  z-index: 40;
  border-bottom: 1px solid var(--color-border);
  background: rgba(15, 22, 40, 0.95);
  backdrop-filter: blur(16px);
}

.header-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.75rem 0;
  gap: 2rem;
}

.header-spacer {
  width: 2.5rem;
}

.header-logo {
  flex: 1;
  display: flex;
  justify-content: center;
}

@media (min-width: 768px) {
  .header-logo {
    justify-content: flex-start;
  }
}

.header-nav {
  margin-left: auto;
}

.logo-text {
  font-family: "Fraunces", Georgia, serif;
  font-size: 1.5rem;
  letter-spacing: 0.05em;
}

.footer {
  border-top: 1px solid var(--color-border);
  padding: 2.5rem 0;
}

.input,
.select,
.textarea {
  width: 100%;
  background: var(--color-background);
  color: var(--color-foreground);
  border: 1px solid var(--color-border);
  border-radius: 0.5rem;
  padding: 0.65rem 0.75rem;
  font-size: 0.9rem;
}

.cart-line {
  display: grid;
  gap: 1rem;
  padding: 1.25rem 0;
  border-bottom: 1px solid var(--color-border);
}

@media (min-width: 900px) {
  .cart-line {
    grid-template-columns: 100px 1fr auto;
    align-items: center;
  }
}
