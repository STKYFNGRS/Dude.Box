<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ page_title }}{% if current_tags %} &ndash; {{ current_tags | join: ", " }}{% endif %}{% if current_page != 1 %} &ndash; Page {{ current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}</title>
    {{ content_for_header }}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fraunces:wght@600;700;900&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    {{ 'base.css' | asset_url | stylesheet_tag }}
    <script>
      if (window.location.hostname === "shop.dude.box" && window.location.pathname === "/") {
        window.location.replace("https://dude.box/shop");
      }
    </script>
  </head>
  <body class="theme-body">
    {% section 'header' %}
    <main class="main-content">
      {{ content_for_layout }}
    </main>
    {% section 'footer' %}
  </body>
</html>
