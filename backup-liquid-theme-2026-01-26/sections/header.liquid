<header class="header">
  <div class="container header-inner">
    <div class="header-spacer" aria-hidden="true"></div>
    <div class="header-logo">
      {% if section.settings.logo != blank %}
        <a href="https://dude.box/" aria-label="{{ shop.name }}">
          <img
            src="{{ section.settings.logo | image_url: width: 360 }}"
            alt="{{ shop.name }}"
            loading="lazy"
            style="height: auto; max-width: 288px; width: 100%;"
          >
        </a>
      {% else %}
        <a href="https://dude.box/" aria-label="{{ shop.name }}">
          <img
            src="https://dude.box/Logo.png"
            alt="{{ shop.name }}"
            loading="lazy"
            style="height: auto; max-width: 288px; width: 100%;"
          >
        </a>
      {% endif %}
    </div>
    <nav class="nav header-nav" aria-label="Primary">
      <a href="https://dude.box/about">About</a>
      <a href="https://dude.box/portal/login">Login</a>
      <a href="https://dude.box/shop" class="solid-button" style="padding: 0.5rem 1.25rem; border-radius: 999px;">
        Shop
      </a>
      <a
        href="https://dude.box/shop"
        class="outline-button"
        style="padding: 0.45rem 0.75rem; border-radius: 999px; position: relative; display: inline-flex; align-items: center; justify-content: center;"
        aria-label="Open cart"
      >
        <span class="sr-only">Cart</span>
        <svg viewBox="0 0 24 24" aria-hidden="true" style="width: 16px; height: 16px;" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="9" cy="20" r="1"></circle>
          <circle cx="17" cy="20" r="1"></circle>
          <path d="M3 4h2l2.4 11.2a2 2 0 0 0 2 1.6h7.2a2 2 0 0 0 2-1.6L21 7H6"></path>
        </svg>
        {% if cart.item_count > 0 %}
          <span style="position: absolute; top: -6px; right: -6px; min-width: 18px; height: 18px; padding: 0 6px; border-radius: 999px; background: var(--color-accent); color: var(--color-background); font-size: 10px; display: inline-flex; align-items: center; justify-content: center;">
            {{ cart.item_count }}
          </span>
        {% endif %}
      </a>
    </nav>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ]
}
{% endschema %}
