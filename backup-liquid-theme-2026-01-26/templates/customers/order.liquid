<section class="section">
  <div class="container">
    <div class="badge muted">Order</div>
    <h1 class="section-title" style="font-size: 2.25rem; margin: 1rem 0;">{{ order.name }}</h1>
    <div class="card" style="border-radius: 1rem; padding: 1.5rem;">
      <div class="muted">Placed {{ order.created_at | date: "%b %d, %Y" }}</div>
      <div style="margin-top: 1rem;">
        {% for line_item in order.line_items %}
          <div class="cart-line">
            <div>
              {% if line_item.image %}
                <img
                  src="{{ line_item.image | image_url: width: 120 }}"
                  alt="{{ line_item.title }}"
                  style="width: 100px; height: 100px; object-fit: cover; border-radius: 0.75rem; border: 1px solid var(--color-border);"
                >
              {% endif %}
            </div>
            <div>
              <div class="section-title" style="font-size: 1.1rem;">{{ line_item.title }}</div>
              <div class="muted" style="font-size: 0.9rem;">Qty: {{ line_item.quantity }}</div>
            </div>
            <div>{{ line_item.final_line_price | money }}</div>
          </div>
        {% endfor %}
      </div>
      <div style="display: flex; justify-content: space-between; margin-top: 1.5rem;">
        <div class="section-title" style="font-size: 1.1rem;">Total</div>
        <div>{{ order.total_price | money }}</div>
      </div>
    </div>
  </div>
</section>
