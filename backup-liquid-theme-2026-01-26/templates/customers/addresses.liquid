<section class="section">
  <div class="container">
    <div class="badge muted">Addresses</div>
    <h1 class="section-title" style="font-size: 2.25rem; margin: 1rem 0;">Your addresses</h1>
    <div class="grid-2">
      {% for address in customer.addresses %}
        <div class="card" style="border-radius: 1rem; padding: 1.5rem;">
          <div class="section-title" style="font-size: 1.1rem;">{{ address.name }}</div>
          <div class="muted" style="margin-top: 0.5rem;">
            {{ address.address1 }}<br>
            {% if address.address2 != blank %}{{ address.address2 }}<br>{% endif %}
            {{ address.city }}, {{ address.province }} {{ address.zip }}<br>
            {{ address.country }}
          </div>
          <a href="{{ routes.account_addresses_url }}" class="outline-button" style="display: inline-block; margin-top: 1rem; padding: 0.5rem 1rem; border-radius: 999px;">
            Manage
          </a>
        </div>
      {% endfor %}
    </div>
    <div class="card" style="border-radius: 1rem; padding: 1.5rem; margin-top: 2rem;">
      <div class="section-title" style="font-size: 1.25rem;">Add a new address</div>
      {% form 'customer_address', customer.new_address %}
        {{ form.errors | default_errors }}
        <div class="grid-2" style="margin-top: 1rem;">
          <label class="muted" style="text-transform: uppercase; letter-spacing: 0.2em; font-size: 0.7rem;">
            First name
            <input class="input" type="text" name="address[first_name]" style="margin-top: 0.5rem;">
          </label>
          <label class="muted" style="text-transform: uppercase; letter-spacing: 0.2em; font-size: 0.7rem;">
            Last name
            <input class="input" type="text" name="address[last_name]" style="margin-top: 0.5rem;">
          </label>
        </div>
        <label class="muted" style="text-transform: uppercase; letter-spacing: 0.2em; font-size: 0.7rem; margin-top: 1rem; display: block;">
          Address
          <input class="input" type="text" name="address[address1]" style="margin-top: 0.5rem;">
        </label>
        <label class="muted" style="text-transform: uppercase; letter-spacing: 0.2em; font-size: 0.7rem; margin-top: 1rem; display: block;">
          City
          <input class="input" type="text" name="address[city]" style="margin-top: 0.5rem;">
        </label>
        <label class="muted" style="text-transform: uppercase; letter-spacing: 0.2em; font-size: 0.7rem; margin-top: 1rem; display: block;">
          Country
          <input class="input" type="text" name="address[country]" style="margin-top: 0.5rem;">
        </label>
        <button type="submit" class="solid-button" style="margin-top: 1.5rem; padding: 0.75rem 1.5rem; border-radius: 999px;">
          Save address
        </button>
      {% endform %}
    </div>
  </div>
</section>
