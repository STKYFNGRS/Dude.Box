<section class="section">
  <div class="container">
    <div class="badge muted">Account</div>
    <h1 class="section-title" style="font-size: 2.25rem; margin: 1rem 0;">Create account</h1>
    <div class="card" style="border-radius: 1rem; padding: 1.5rem; max-width: 640px;">
      {% form 'create_customer' %}
        {{ form.errors | default_errors }}
        <div class="grid-2">
          <label class="muted" style="text-transform: uppercase; letter-spacing: 0.2em; font-size: 0.7rem;">
            First name
            <input class="input" type="text" name="customer[first_name]" style="margin-top: 0.5rem;">
          </label>
          <label class="muted" style="text-transform: uppercase; letter-spacing: 0.2em; font-size: 0.7rem;">
            Last name
            <input class="input" type="text" name="customer[last_name]" style="margin-top: 0.5rem;">
          </label>
        </div>
        <label class="muted" style="text-transform: uppercase; letter-spacing: 0.2em; font-size: 0.7rem; margin-top: 1rem; display: block;">
          Email
          <input class="input" type="email" name="customer[email]" required style="margin-top: 0.5rem;">
        </label>
        <label class="muted" style="text-transform: uppercase; letter-spacing: 0.2em; font-size: 0.7rem; margin-top: 1rem; display: block;">
          Password
          <input class="input" type="password" name="customer[password]" required style="margin-top: 0.5rem;">
        </label>
        <button type="submit" class="solid-button" style="margin-top: 1.5rem; padding: 0.75rem 1.5rem; border-radius: 999px;">
          Create account
        </button>
      {% endform %}
    </div>
  </div>
</section>
