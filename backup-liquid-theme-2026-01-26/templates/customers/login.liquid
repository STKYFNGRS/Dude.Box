<section class="section">
  <div class="container">
    <div class="badge muted">Account</div>
    <h1 class="section-title" style="font-size: 2.25rem; margin: 1rem 0;">Sign in</h1>
    <div class="grid-2">
      <div class="card" style="border-radius: 1rem; padding: 1.5rem;">
        {% form 'customer_login' %}
          {{ form.errors | default_errors }}
          <label class="muted" style="text-transform: uppercase; letter-spacing: 0.2em; font-size: 0.7rem;">
            Email
            <input class="input" type="email" name="customer[email]" required style="margin-top: 0.5rem;">
          </label>
          <label class="muted" style="text-transform: uppercase; letter-spacing: 0.2em; font-size: 0.7rem; margin-top: 1rem;">
            Password
            <input class="input" type="password" name="customer[password]" required style="margin-top: 0.5rem;">
          </label>
          <div class="button-row" style="margin-top: 1.5rem;">
            <button type="submit" class="solid-button" style="padding: 0.75rem 1.5rem; border-radius: 999px;">
              Sign in
            </button>
            <a href="#recover" class="outline-button" style="padding: 0.75rem 1.5rem; border-radius: 999px;">
              Forgot password
            </a>
          </div>
        {% endform %}
      </div>

      <div class="card" style="border-radius: 1rem; padding: 1.5rem;">
        <div class="section-title" style="font-size: 1.5rem;">Create account</div>
        <p class="muted" style="margin-top: 0.75rem;">Get order history, tracking, and faster checkout.</p>
        <a href="{{ routes.account_register_url }}" class="solid-button" style="display: inline-block; margin-top: 1.25rem; padding: 0.75rem 1.5rem; border-radius: 999px;">
          Create account
        </a>
      </div>
    </div>

    <div id="recover" style="margin-top: 2rem;">
      <div class="card" style="border-radius: 1rem; padding: 1.5rem; max-width: 520px;">
        <div class="section-title" style="font-size: 1.5rem;">Reset password</div>
        {% form 'recover_customer_password' %}
          {{ form.errors | default_errors }}
          <label class="muted" style="text-transform: uppercase; letter-spacing: 0.2em; font-size: 0.7rem; margin-top: 1rem; display: block;">
            Email
            <input class="input" type="email" name="email" required style="margin-top: 0.5rem;">
          </label>
          <button type="submit" class="outline-button" style="margin-top: 1rem; padding: 0.75rem 1.5rem; border-radius: 999px;">
            Send reset link
          </button>
        {% endform %}
      </div>
    </div>
  </div>
</section>
