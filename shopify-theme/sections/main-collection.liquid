<section class="section">
  <div class="container">
    <div class="badge muted">Collection</div>
    <h1 class="section-title" style="font-size: 2.25rem; margin: 1rem 0;">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <p class="muted" style="max-width: 680px;">{{ collection.description }}</p>
    {% endif %}
    <div class="grid-3" style="margin-top: 2rem;">
      {% for product in collection.products %}
        <div class="card" style="border-radius: 1rem; padding: 1.5rem;">
          {% if product.featured_image %}
            <div style="border-radius: 0.75rem; overflow: hidden; border: 1px solid var(--color-border);">
              <img
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.title }}"
                loading="lazy"
                style="width: 100%; height: 180px; object-fit: cover;"
              >
            </div>
          {% endif %}
          <h3 class="section-title" style="font-size: 1.25rem; margin-top: 1rem;">{{ product.title }}</h3>
          <p class="muted" style="font-size: 0.9rem;">{{ product.description | strip_html | truncate: 120 }}</p>
          <div style="margin-top: 0.75rem;">{{ product.price | money }}</div>
          <a href="{{ product.url }}" class="outline-button" style="display: inline-block; margin-top: 1rem; padding: 0.5rem 1rem; border-radius: 999px;">
            View Details
          </a>
        </div>
      {% else %}
        <p class="muted">No products found.</p>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Main collection",
  "settings": []
}
{% endschema %}
