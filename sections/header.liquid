<header class="header">
  <div class="container header-inner">
    <div>
      {% if section.settings.logo != blank %}
        <a href="https://dude.box/" aria-label="{{ shop.name }}">
          <img
            src="{{ section.settings.logo | image_url: width: 360 }}"
            alt="{{ shop.name }}"
            loading="lazy"
            style="height: auto; max-width: 288px; width: 100%;"
          >
        </a>
      {% else %}
        <a href="https://dude.box/" aria-label="{{ shop.name }}">
          <img
            src="https://dude.box/Logo.png"
            alt="{{ shop.name }}"
            loading="lazy"
            style="height: auto; max-width: 288px; width: 100%;"
          >
        </a>
      {% endif %}
    </div>
    <nav class="nav" aria-label="Primary">
      <a href="https://shop.dude.box/collections/all">Shop</a>
      <a href="https://dude.box/our-mission">About</a>
      <a href="https://shop.dude.box/account/login">Login</a>
      <a href="https://shop.dude.box/products/subscription-box" class="solid-button" style="padding: 0.5rem 1.5rem; border-radius: 999px;">
        Subscribe
      </a>
      <a href="https://shop.dude.box/cart" class="outline-button" style="padding: 0.5rem 1.5rem; border-radius: 999px;">
        Cart
      </a>
    </nav>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ]
}
{% endschema %}
