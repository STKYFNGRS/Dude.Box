<section class="section section-border">
  <div class="container">
    <div class="hero-grid">
      <div>
        <div class="badge muted">{{ section.settings.eyebrow }}</div>
        <h1 class="section-title" style="font-size: clamp(2.5rem, 4vw, 3.75rem); margin: 1.25rem 0;">
          {{ section.settings.heading }}
        </h1>
        <p class="muted" style="max-width: 620px; font-size: 1.05rem;">
          {{ section.settings.subhead }}
        </p>
        <div class="button-row" style="margin-top: 1.5rem;">
          <a href="{{ section.settings.primary_link }}" class="solid-button" style="padding: 0.75rem 1.5rem; border-radius: 999px;">
            {{ section.settings.primary_label }}
          </a>
          <a href="{{ section.settings.secondary_link }}" class="outline-button" style="padding: 0.75rem 1.5rem; border-radius: 999px;">
            {{ section.settings.secondary_label }}
          </a>
        </div>
      </div>
      <div class="card" style="border-radius: 1.5rem; padding: 1.5rem;">
        <div style="aspect-ratio: 4 / 5; border-radius: 1rem; border: 1px solid var(--color-border); display: flex; align-items: center; justify-content: center; background: rgba(20, 29, 51, 0.6);">
          <span class="badge muted">Flat lay hero placeholder</span>
        </div>
        <div class="muted" style="margin-top: 1rem; font-size: 0.9rem;">
          High-fidelity flat lay photography spotlights the monthâ€™s drop.
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Veteran-owned subscription"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Gear with Purpose. Stories with Soul."
    },
    {
      "type": "textarea",
      "id": "subhead",
      "label": "Subhead",
      "default": "The only subscription box sourced entirely from Veteran-Owned Businesses."
    },
    {
      "type": "text",
      "id": "primary_label",
      "label": "Primary button label",
      "default": "Start Your Subscription"
    },
    {
      "type": "url",
      "id": "primary_link",
      "label": "Primary button link",
      "default": ""
    },
    {
      "type": "text",
      "id": "secondary_label",
      "label": "Secondary button label",
      "default": "Give as a Gift"
    },
    {
      "type": "url",
      "id": "secondary_link",
      "label": "Secondary button link",
      "default": ""
    }
  ]
}
{% endschema %}
